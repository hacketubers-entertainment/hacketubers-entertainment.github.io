---
import GooglePlay from "../buttons/GooglePlay.astro";
import Carrusel from "../carruseles/carrusel.astro";
import CharacteristicCard from "../CharacteristicCard.astro";
const imagenesCarrusel = [
  {
    src: "/images/pvzStore/capturas/captura18.png",
    tipo: "imagen_vertical",
  },
  {
    src: "/images/pvzStore/capturas/captura19.png",
    tipo: "imagen_vertical",
  },
  {
    src: "/images/pvzStore/capturas/captura11.png",
    tipo: "imagen_vertical",
  },
  {
    src: "/images/pvzStore/capturas/captura12.png",
    tipo: "imagen_vertical",
  },
  {
    src: "/images/pvzStore/capturas/captura13.png",
    tipo: "imagen_vertical",
  },
  {
    src: "/images/pvzStore/capturas/captura14.png",
    tipo: "imagen_vertical",
  },
];
---

<main>
  <div class="contenedor_principal">
    <h2 id="titulo_app">Comparte contenido de Videojuegos</h2>
    <p id="subtitulo_app">
      Pea store es una aplicacion comunitaria para compartir todo tipo de
      contenido de Videojuegos.
    </p>
    <div id="img_info">
      <img
        id="imagen_principal"
        src="/images/pvzStore/pvzStoreLogo.png"
        alt=""
        srcset=""
      />
    </div>
    <div id="googleplay_button">
    <GooglePlay
      Link="https://play.google.com/store/apps/details?id=com.hacketubers_entertainment.pvzstore"
    />
  </div>
  </div>
</main>
<section>
  <CharacteristicCard
    title="Crea y comparte Niveles modificados"
    description="Comparte tus niveles modificados de videojuegos con otros usuarios de la comunidad."
    image="/images/pvzStore/Mackups/mackupnivelespvzstore.png"
    imageAlt="Icono de compartir contenido"
    imagePosition="right"
  />

  <CharacteristicCard
    title="Una aplicacion social comunitaria"
    description="Crea un perfil y comparte tu contenido con otros usuarios de la comunidad."
    image="/images/pvzStore/Mackups/mackupsocialpvzstore.png"
    imageAlt="Icono de compartir contenido"
    imagePosition="left"
  />

  <CharacteristicCard
    title="Mantente al dia con las noticias de PvZ"
    description="Sigue las ultimas noticias y actualizaciones sobre videojuegos."
    image="/images/pvzStore/Mackups/mackupnoticiaspvzstore.png"
    imageAlt="Icono de compartir contenido"
    imagePosition="right"
  />
  <CharacteristicCard
    title="Personaliza tu experiencia"
    description="Personaliza tu experiencia en Pea Store con temas, colores y configuraciones personalizadas."
    image="/images/pvzStore/Mackups/mackuppersonalizacionpvzstore.png"
    imageAlt="Icono de personalización"
    imagePosition="left"
  />

  <div id="cont_presentacion">
    <p id="presentacion">
      Creada originalmente para compartir niveles modificados y recursos de
      estos, ahora nos enfocamos en compartir todo tipo de contenido relacionado
      con la saga, como mods, niveles, recursos, musica, etc.<br />
      Nuestro objetivo actual es recrear la app desde cero para mejorar la experiencia
      del usuario y añadir nuevas funcionalidades.<br />
    </p>
  </div>

  <Carrusel images={imagenesCarrusel} />

  <div id="cont_botones_descarga">
    <GooglePlay
      Link="https://play.google.com/store/apps/details?id=com.hacketubers_entertainment.pvzstore"
    />
  </div>
</section>
<a
  href="/politicas/politicasPeaStore"
  target="_blank"
  rel="noopener noreferrer"
  class="linkPoliticas">politicas de privacidad</a
>
<a
  href="/politicas/estandaresPeaStore"
  target="_blank"
  rel="noopener noreferrer"
  class="linkPoliticas"
  >estandares de Seguridad y Protección Infantil (CSAE)
</a>
<style>
  @font-face {
    font-family: "milky_mania";
    src: url("/src/fonts/MilkyMania.ttf");
  }
  @font-face {
    font-family: "Black-Regular";
    src: url("/src/fonts/Black-Regular.ttf");
  }

  main {
    box-shadow: inset 10 10 100px #000000;
    background-image: url("/images/fondoBarda.webp");
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    height: 100vh;
    border-radius: 40px;
  }
  .contenedor_principal {
    background-color: #00000048;
    display: flex;
    flex-direction: row;
    padding-top: 40px;
    padding-bottom: 40px;
    gap: 20px;
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 40px;
  }
  #cont_itulo_juego {
    display: flex;
  }
  #titulo_app {
    position: absolute;
    top: 10px;
    left: 5%;
    font-size: 5rem;
    font-family: "Black-Regular", sans-serif;
    color: rgb(255, 255, 255);
    filter: drop-shadow(10, 10, #000);
    text-align: left;
    white-space: pre-line;
    margin: 0px;
    margin-top: 80px;
    -webkit-text-stroke-width: 0.2px;
    -webkit-text-stroke-color: rgb(255, 255, 255);
  }
  #subtitulo_app {
    position: absolute;
    top: 250px;
    left: 5%;
    font-size: 1rem;
    font-family: "Black-Regular", sans-serif;
    color: rgb(255, 255, 255);
    filter: drop-shadow(10, 10, #000);
    text-align: left;
    white-space: pre-line;
    margin: 0px;
    margin-top: 80px;
    -webkit-text-stroke-width: 0.2px;
    -webkit-text-stroke-color: rgb(255, 255, 255);
  }
  #googleplay_button {
    position: relative;
    top: 60%;
    left: 1%;
    backdrop-filter: blur(5px);
    padding: 10px;
    padding-bottom: 30px;
    border-radius: 10px;
    color: rgb(70, 54, 40);
    font-size: 18px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 200px;
    height: fit-content;
  }
  

  #img_info {
    display: flex;
  }
  #imagen_principal {
    position: absolute;
    bottom: 10%;
    right: 10%;
    align-self: flex-end;
    cursor: pointer;
    filter: drop-shadow(2px 2px 5px #000000);
    width: 30%;
  }
  #cont_presentacion {
    align-content: center;
  }

  #cont_botones_descarga {
    margin-top: 60px;
    text-align: center;
    font-size: large;
  }
  .linkPoliticas {
    text-align: center;
    text-decoration: none;
    display: block;
    margin-top: 20px;
    color: white;
    font-size: 14px;
  }
  @media only screen and (min-width: 856px) and (max-width: 1050px) {
    #titulo_app {
      font-size: 3rem;
    }
    #subtitulo_app {
      font-size: 1rem;
    }
  }

  @media only screen and (min-width: 0px) and (max-width: 854px) {
    .contenedor_principal {
      position: static;
      flex-direction: column;
      align-items: center;
      justify-content: space-around;
      text-align: center;
      padding-top: 20px;
      padding-bottom: 20px;
      gap: 10px;
    }
    #titulo_app {
      font-size: 2rem;
      text-align: center;
      margin-top: 60px;
      position: static;
    }
    #subtitulo_app {
      font-size: 1rem;
      text-align: center;
      margin-top: 0px;
      position: static;
    }
    #img_info {
      display: block;
    }
    #imagen_principal {
      position: static;
      bottom: 0;
      right: 0;
      width: 200px;
    }
    #googleplay_button {
      position: static;
      width: 100%;
      margin: 0px;
      margin-top: 0px;
    }
    #boton_playstore {
      width: 70vw;
    }
  }
</style>
