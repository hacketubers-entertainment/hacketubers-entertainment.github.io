---
const pathname = Astro.url.pathname;
---

<header>
  <div class="item">
    <h1>Hacketubers Entertainment</h1>
  </div>
  <div class="item"></div>
  <div class="SeccionesNavbar item">
    {
      pathname != "/" ? (
        <a class="apartados" href="/">
          <p>Home</p>
        </a>
      ) : (
        <div />
      )
    }
    <a class="apartados" href="/juegos"><p>Juegos</p></a>
    <a class="apartados" href="/apps"><p>Aplicaciones</p></a>
    <a class="apartados" href="/webs"><p>Sitios Web</p></a>
    <a class="apartados"><p>proyectos</p></a>
  </div>
  <label id="menu-button" class="btn_menu" class="apartados" for="btn-menu"
    ><img src="/icons/menu-01-stroke-rounded.svg" alt="Abrir menú" /></label
  >
</header>

<script is:inline>
  // Script para manejar la apertura del menú lateral
  // Asegúrate de que SideMenu.astro está importado o sus funciones openNav/closeNav son globales
  // y que el SideMenu tiene el id="side-menu"
  const menuButton = document.getElementById("menu-button");
  if (menuButton) {
    menuButton.addEventListener("click", () => {
      // Suponiendo que openNav está definida globalmente desde SideMenu.astro
      // o que SideMenu.astro maneja su propia visibilidad basado en eventos.
      // Para una integración más limpia, podrías usar custom events o un store.
      if (typeof openNav === "function") {
        openNav();
      } else {
        console.error(
          "La función openNav no está definida. Asegúrate de que SideMenu.astro se carga y define openNav globalmente o ajusta la lógica de eventos."
        );
      }
    });
  }
</script>

<style>
  :root {
    --tiempocomponente: 3s;
  }
  @font-face {
    font-family: "montserrat";
    src: url("../fonts/Montserrat/Montserrat-VariableFont_wght.ttf");
  }
  @font-face {
    font-family: "sigmar";
    src: url("../fonts/Sigmar/Sigmar-Regular.ttf");
  }
  @font-face {
    font-family: "bebas";
    src: url("../fonts/Bebas_Neue/BebasNeue-Regular.ttf");
  }
  header {
    align-self: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    z-index: 10;
    width: 100vw;
    max-width: 100vw;
    height: 80px;
    min-height: 80px;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    top: 0px;
    background-color: rgb(255, 255, 255);
    box-shadow: 1px 5px 10px 1px #00000031;
    animation: navbarAparece 2s ease-in-out forwards;
    animation-iteration-count: 1;
    transition: height 0.3s;
  }
  h1 {
    padding-left: 10px;
    font-family: "bebas";
    background: #2e0083;
    background: linear-gradient(
      to right,
      #2e0083 0%,
      #490d9d 21%,
      #8000cf 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: componenteAparece var(--tiempocomponente) ease-in-out forwards;
    animation-iteration-count: 1;
  }
  .item:nth-child(2) {
    flex-grow: 1;
  }
  .SeccionesNavbar {
  }

  .apartados {
    padding-left: 10px;
    padding-right: 10px;
    cursor: pointer;
    background-color: rgb(255, 255, 255);
    float: left;
    margin-right: 5px;
    margin-left: 0px;
    margin-top: 20px;
    text-decoration: none;
    animation: componenteAparece var(--tiempocomponente) ease-in-out forwards;
    animation-iteration-count: 1;
  }
  .apartados:hover {
    background-color: rgba(0, 0, 0, 0.123);
    border: 1px solid black;
  }
  .btn_menu {
    margin-top: auto;
    margin-bottom: auto;
    margin-right: 10px;
    margin-left: auto;
  }
  p {
    font-family: "montserrat";
  }
  .item {
    animation: componenteAparece var(--tiempocomponente) ease-in-out forwards;
    animation-iteration-count: 1;
  }

  @keyframes componenteAparece {
    from {
      transform: translate(0px, 10px);
      opacity: 0;
    }
    to {
      transform: translate(0px, 0px);
      opacity: 1;
    }
  }

  @keyframes navbarAparece {
    from {
      border-radius: 70px;
      width: 100px;
      opacity: 0;
    }
    to {
      width: 100%;
      opacity: 1;
    }
  }
  @media only screen and (min-width: 0px) and (max-width: 853px) {
    :root {
      --tiempocomponente: 2s;
    }
    header {
      animation: navbarAparece 1s ease-in-out forwards;
    }
    .apartados {
      cursor: crosshair;
      font-size: 0px;
      padding-right: 0px;
      padding-left: 0px;
    }
    h1 {
      font-size: 24px;
    }
  }

  @media only screen and (min-width: 854px) and (max-width: 1200px) {
    h1 {
      font-size: 44px;
      margin-right: 0px;
    }
    .apartados {
      cursor: pointer;
      font-size: 0px;
    }
  }
</style>
