<div class="backgroudMenu" id="backgroudMenu">
  <div id="side-menu" class="side-menu">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
      >&times;</a
    >
    <a href="/">Home</a>
    <a href="juegos">Juegos</a>
    <a>Aplicaciones</a>
    <a>Sitios Web</a>
    <a>Proyectos</a>
  </div>
</div>

<style>
  .backgroudMenu {
    z-index: 999;
    width: 0vw;
    height: 100vh;
    background-color: rgba(255, 255, 255, 0.301);
    background-image: radial-gradient(
        circle at 91% 11%,
        hsla(13, 100%, 88%, 0.226) 4.038772213247173%,
        transparent 37.2265767974114%
      ),
      radial-gradient(
        circle at 66% 37%,
        rgba(228, 194, 255, 0.363) 0%,
        transparent 63.33640956108327%
      ),
      radial-gradient(
        circle at 36% 87%,
        rgba(222, 194, 255, 0.637) 12.107536057085522%,
        transparent 63.33640956108327%
      );
    background-blend-mode: normal, normal, normal;
    background-repeat: no-repeat;
    background-attachment: fixed;
    backdrop-filter: blur(10px);
    transition: 0.5s;
    position: fixed;
  }
  .side-menu {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 100; /* Asegúrate de que sea mayor que el z-index del header */
    top: 0;
    left: 0;
    background-color: #ffffff;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
  }

  .side-menu a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #5f5f5f;
    display: block;
    transition: 0.3s;
  }

  .side-menu a:hover {
    color: #000000;
  }

  .side-menu .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
  }
</style>

<script is:inline>
  function openNav() {
    const sideMenu = document.getElementById("side-menu");
    const backgroudMenu = document.getElementById("backgroudMenu");
    if (sideMenu) {
      sideMenu.style.width = "250px";
      backgroudMenu.style.width = "100vw";
      backgroudMenu.style.height = "100vh";
      document.body.style.overflow = "hidden";
    }
  }

  function closeNav() {
    const sideMenu = document.getElementById("side-menu");
    const backgroudMenu = document.getElementById("backgroudMenu");
    if (sideMenu && backgroudMenu) {
      sideMenu.style.width = "0";
      backgroudMenu.style.width = "0vw";
      document.body.style.overflow = "auto";
    }
  }

  // Adjuntar openNav al botón del menú en navBar.astro
