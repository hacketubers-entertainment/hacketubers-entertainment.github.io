<div class="backgroudMenu" id="backgroudMenu">
  <div id="side-menu" class="side-menu">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
      >&times;</a
    >
    <a href="/">Home</a>
    <a href="/juegos">Juegos</a>
    <a href="/apps">Aplicaciones</a>
    <a href="/webs">Sitios Web</a>
    <a>Proyectos</a>
  </div>
</div>

<style>
  .backgroudMenu {
    z-index: 999;
    width: 0vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5); /* Darker, simpler overlay */
    backdrop-filter: blur(5px);
    transition:
      opacity 0.3s ease,
      width 0s 0.3s; /* Delay width change to allow fade out */
    position: fixed;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .backgroudMenu.open {
    width: 100vw;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .side-menu {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    background-color: var(--color-background);
    overflow-x: hidden;
    transition: width 0.3s ease;
    padding-top: 60px;
    box-shadow: var(--shadow-md);
  }

  .side-menu.open {
    width: 250px;
  }

  .side-menu a {
    padding: 15px 25px;
    text-decoration: none;
    font-size: 1.2rem;
    color: var(--color-text);
    display: block;
    transition: 0.3s;
    font-family: var(--font-main);
    border-left: 4px solid transparent;
  }

  .side-menu a:hover {
    color: var(--color-accent);
    background-color: rgba(0, 0, 0, 0.05);
    border-left: 4px solid var(--color-accent);
  }

  .side-menu .closebtn {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 36px;
    margin-left: 0;
    padding: 0;
    color: var(--color-text);
  }

  .side-menu .closebtn:hover {
    background: none;
    border: none;
    color: var(--color-accent);
  }
</style>

<script is:inline>
  function openNav() {
    const sideMenu = document.getElementById("side-menu");
    const backgroudMenu = document.getElementById("backgroudMenu");
    if (sideMenu && backgroudMenu) {
      sideMenu.classList.add("open");
      backgroudMenu.classList.add("open");
      document.body.style.overflow = "hidden";
    }
  }

  function closeNav() {
    const sideMenu = document.getElementById("side-menu");
    const backgroudMenu = document.getElementById("backgroudMenu");
    if (sideMenu && backgroudMenu) {
      sideMenu.classList.remove("open");
      backgroudMenu.classList.remove("open");
      document.body.style.overflow = "auto";
    }
  }

  // Close menu when clicking outside
  document.getElementById("backgroudMenu")?.addEventListener("click", closeNav);
</script>
