---
interface Props {
  href: string;
  img: string;
}
const { href, img } = Astro.props;
---

<a class="icon_social" href={href} target="_blank">
  <img src={img} alt="icono" />
</a>
<style>
  a {
    padding: 10px;
    border-radius: 10px;
    animation: 3s;
    border-radius: 25px;
    background: linear-gradient(145deg, #ffffff, #e6e6e6);
    box-shadow:
      15px 15px 16px #999999,
      -5px -5px 6px #ffffff;
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 10% cover 30%;
  }
  a:hover {
    transform: translate(5px, 5px);
    padding: 10px;
    background: #ffffff;
    box-shadow:
      inset 15px 15px 16px #999999,
      inset -15px -15px 16px #ffffff;
  }
  @keyframes reveal {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @media only screen and (min-width: 0) and (max-width: 1035px) {
    a {
      display: flex;
      box-shadow: 15px 16px 12px 0px #878787;
      border-radius: 15px;
      animation: 1s;
      flex: 0 0 30%;
      box-sizing: border-box;
    }
    a img {
      margin: auto;
      width: 50%;
    }
  }
  @media screen and (max-width: 767px) {
    a img {
      margin: auto;
      width: 50%;
    }
  }
</style>
