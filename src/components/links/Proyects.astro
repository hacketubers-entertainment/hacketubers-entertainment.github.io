---
interface Props {
  href: string;
  img: string;
}
const { href, img } = Astro.props;
---

<div class="proyecto">
  <a href={href}>
    <img src={img} alt="imagen" srcset="" />
  </a>
</div>
<style>
  .proyecto {
    background: linear-gradient(145deg, #ffffff, #e6e6e6);
    box-shadow:
      14px 14px 28px #3a3a3a6e,
      -4px -4px 18px #ffffff;
    width: 90%;
    border-radius: 10px;
    padding: 10px;
    animation: revealcontproyect linear both;
    animation-timeline: view();
    animation-range: entry 10% cover 30%;
  }
  .proyecto a {
    width: 100%;
    height: 100%;
    aspect-ratio: 16/9;
    border-radius: 10px;
    background-color: blue;
    box-shadow:
      inset 14px 14px 28px #666666,
      inset -14px -14px 28px #ffffff;
  }
  .proyecto a img {
    width: 100%;
    height: 100%;
    aspect-ratio: 16/9;
    animation: revealproyect linear both;
    object-fit: cover;
    animation-timeline: view();
    animation-range: entry 10% cover 30%;
  }
  @keyframes revealcontproyect {
    from {
      transform: translate(0px, 50px);
      opacity: 0;
    }
    to {
      transform: translate(0px, 0px);
      opacity: 1;
    }
  }
  @keyframes revealproyect {
    from {
      opacity: 0;
      scale: 0.8;
    }
    to {
      opacity: 1;
    }
  }
  @media only screen and (max-width: 1035px) {
    .proyecto {
      width: 90%;
    }
  }
</style>
