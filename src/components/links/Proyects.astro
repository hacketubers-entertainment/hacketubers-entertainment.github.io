---
interface Props {
  href: string;
  img: string;
}
const { href, img } = Astro.props;
---

<div class="proyecto">
  <a href={href}>
    <img src={img} alt="imagen" srcset="" />
  </a>
</div>
<style>
  .proyecto {
    background: linear-gradient(145deg, #ffffff, #e6e6e6);
    box-shadow:
      14px 14px 28px #3a3a3a,
      -4px -4px 18px #ffffff;
    width: 90%;
    border-radius: 10px;
    padding: 10px;
  }
  .proyecto img {
    width: 100%;
    aspect-ratio: 16/9;
    border-radius: 10px;
    box-shadow:
      inset 14px 14px 28px #666666,
      inset -14px -14px 28px #ffffff;
  }
  @media only screen and (max-width: 1035px) {
    .proyecto {
      width: 90%;
    }
  }
</style>
