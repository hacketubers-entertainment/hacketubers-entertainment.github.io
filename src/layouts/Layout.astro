<style is:global>
  @font-face {
    font-family: "montserrat";
    src: url("../fonts/Montserrat/Montserrat-VariableFont_wght.ttf");
  }
  @font-face {
    font-family: "sigmar";
    src: url("../fonts/Sigmar/Sigmar-Regular.ttf");
  }
  @font-face {
    font-family: "bebas";
    src: url("../fonts/Bebas_Neue/BebasNeue-Regular.ttf");
  }
  @font-face {
    font-family: "EA";
    src: url("../fonts/ElectronicArtsText-Regular.woff2");
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  body {
    background: linear-gradient(50deg, #b692ff, #ffffff, #fffaef, #fdf6ff, #f3ecff);
    background-size: 1000% 1000%;

    animation: AnimationName 33s ease infinite;
    font-family: "montserrat", sans-serif;
    background-blend-mode: normal, normal, normal;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }
  .css-selector {
    background: linear-gradient(270deg, #6000ff, #ffffff, #fffaef, #fdf6ff, #f3ecff);
    background-size: 1000% 1000%;

    animation: AnimationName 30s ease infinite;
}

@keyframes AnimationName {
    0%{background-position:0% 96%}
    50%{background-position:100% 5%}
    100%{background-position:0% 96%}
}
  /* Scrollbar personalizado */
  ::-webkit-scrollbar {
    width: 10px;
    height: 8px;
  }
  ::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #4e4376 0%, #22608a 100%);
    border-radius: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #191919;
    border-radius: 8px;
  }
  ::-webkit-scrollbar-corner {
    background: #191919;
  }

  /* Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: #4e4376 #191919;
  }
  .subtitulo {
    margin-top: 40px;
    margin-left: 50px;
    font-family: "montserrat";
  }
</style>
