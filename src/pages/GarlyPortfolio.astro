      style="--rotation: 20deg;"
    />
  </div>
  <div class="sticker-wrapper marcador" data-speed="0.15">
    <img
      src="/figuritas/marcador.svg"
      alt="stiker"
      class="stiker"
      style="--rotation: -20deg;"
    />
  </div>
  <section id="skills" class="skills-section">
    <h2 class="subtitulo">Habilidades</h2>
    <div class="skills-grid">
      <div class="skill-item">JavaScript</div>
      <div class="skill-item">TypeScript</div>
      <div class="skill-item">React</div>
      <div class="skill-item">React Native</div>
      <div class="skill-item">PHP</div>
      <div class="skill-item">Godot Engine</div>
      <div class="skill-item">Astro</div>
      <div class="skill-item">Node.js</div>
      <div class="skill-item">Firebase</div>
      <div class="skill-item">Supabase</div>
      <div class="skill-item">Git</div>
